<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/flashcashbkgd"
    tools:showIn="@layout/activity_login" tools:context="com.example.flashcash.login">


    <ImageView
        android:src="@drawable/logo"
        android:layout_width="110dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/flashcash"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="I need cash"
        android:id="@+id/button"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/yourcashinaflash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textColor="@color/white"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/signin"
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/signin"
        android:layout_gravity="bottom"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/signup"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:src="@drawable/signup"
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/signin"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Signing up for our service, you agree to the terms and conditions."
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/signup"
        android:layout_alignStart="@+id/signin" />
</RelativeLayout>